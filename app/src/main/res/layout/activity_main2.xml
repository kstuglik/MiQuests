<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2"
        android:orientation="vertical"
        android:background="#274245">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                          android:layout_weight="1"
                          android:layout_gravity="center"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent" android:layout_height="80dp"
                              android:orientation="horizontal" android:gravity="center">
                    <ImageView android:layout_width="50dp" android:layout_height="50dp"
                               android:layout_marginRight="20dp"
                               android:padding="8dp"
                               android:src="@drawable/b50x50"
                               android:onClick="help50x50"
                               android:id="@+id/img50x50"
                    />
                    <ImageView android:layout_width="50dp" android:layout_height="50dp"
                               android:layout_marginRight="20dp"
                               android:padding="8dp"
                               android:src="@drawable/groupa10"
                               android:onClick="Dialog"
                    />
                    <ImageView android:layout_width="80dp" android:layout_height="match_parent"
                               android:layout_marginRight="20dp"
                               android:src="@drawable/m2"/>
                    <ImageView android:layout_width="50dp" android:layout_height="50dp"
                               android:layout_marginRight="20dp"
                               android:padding="8dp"
                               android:src="@drawable/restart"
                               android:onClick="restart"
                    />
                    <ImageView android:layout_width="50dp" android:layout_height="50dp"
                               android:padding="8dp"
                    />
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                android:gravity="center">
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_margin="10dp"
                              android:text="Kto pyta nie błądzi"
                              android:textSize="25sp"
                              android:textColor="#fff"
                              android:gravity="center"
                              android:background="@drawable/bg_quest"
                              android:id="@+id/txvQuestion"
                    />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                          android:layout_weight="1"
                          android:layout_gravity="center"
                          android:orientation="vertical">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp">
                    <View android:layout_width="match_parent" android:layout_height="3dp"
                          android:background="#fff"
                          android:layout_centerInParent="true"/>
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_marginRight="50dp"
                              android:layout_marginLeft="50dp"
                              android:background="@drawable/bg_btn"
                              android:text=""
                              android:textColor="#fff"
                              android:textSize="14sp"
                              android:textStyle="bold"
                              android:gravity="center"
                              android:id="@+id/txvAnswer1"
                    />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp">
                    <View android:layout_width="match_parent" android:layout_height="3dp"
                          android:background="#fff"
                          android:layout_centerInParent="true"/>
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_marginRight="50dp"
                              android:layout_marginLeft="50dp"
                              android:background="@drawable/bg_btn"
                              android:text=""
                              android:textColor="#fff"
                              android:textSize="14sp"
                              android:textStyle="bold"
                              android:gravity="center"
                              android:id="@+id/txvAnswer2"
                    />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp">
                    <View android:layout_width="match_parent" android:layout_height="3dp"
                          android:background="#fff"
                          android:layout_centerInParent="true"/>
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_marginRight="50dp"
                              android:layout_marginLeft="50dp"
                              android:background="@drawable/bg_btn"
                              android:text=""
                              android:textColor="#fff"
                              android:textSize="14sp"
                              android:textStyle="bold"
                              android:gravity="center"
                              android:id="@+id/txvAnswer3"
                    />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp">
                    <View android:layout_width="match_parent" android:layout_height="3dp"
                          android:background="#fff"
                          android:layout_centerInParent="true"/>
                    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                              android:layout_marginRight="50dp"
                              android:layout_marginLeft="50dp"
                              android:background="@drawable/bg_btn"
                              android:text=""
                              android:textColor="#fff"
                              android:textSize="14sp"
                              android:textStyle="bold"
                              android:gravity="center"
                              android:id="@+id/txvAnswer4"
                    />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textSize="25dp"
                  android:text="hello"
                  android:background="#EDECE2"
                  android:id="@+id/txvDescription"
                  android:visibility="gone"
        >

        </TextView>
    </RelativeLayout>
    <RelativeLayout android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="#fff"
                    android:padding="10dp"
                    android:gravity="center"
    >
        <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/lsvDetails"></ListView>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>